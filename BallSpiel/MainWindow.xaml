<Window x:Class="BallSpiel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BallSpiel"
        mc:Ignorable="d"
        Title="BallSpiel" Height="450" Width="800">
    <Grid>
        <Button Content="Start/Stop" Name="StartStopButton" HorizontalAlignment="Left" Margin="80,64,0,0" VerticalAlignment="Top" Click="StartStopButton_Click"/>
        <Label Content="0 Clicks" Name="SpielstandLabel" HorizontalAlignment="Left" Margin="80,94,0,0" VerticalAlignment="Top"/>
        <Canvas Margin="180,0,0,0" Name="Spielplatz" Background="#FFE1D6">
            <Ellipse Name="Ball" Width="20" Height="20" Fill="Black" Canvas.Left="100" Canvas.Top="100" MouseUp="Ball_MouseUp"/>
        </Canvas>
    </Grid>
</Window>
